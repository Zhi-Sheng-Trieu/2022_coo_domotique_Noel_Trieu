@startuml

interface Appareil <<interface>>{
    +allumer() : void
    +eteindre() : void
}

class Lampe{
    -nom : String
    -allume : boolean
    +Lampe(nom : String) : Lampe
    +isAllume() : boolean
    +toString() : String
}

class Telecommande{

    +Telecommande() : Telecommande
    +ajouterAppareil(Appareil appareil) : void
    +activerAppareil(int indiceAppareil) : void
    +desactiverAppareil(int indiceAppareil) : void
    +activerTout() : void
    +desactiverTout() : void
    +toString() : String
}

class Hifi{
    -son : int
    +toString() : String
}


Appareil <. Lampe
Appareil <. Hifi

Appareil "*" <-- "*" Telecommande : - appareils

@enduml